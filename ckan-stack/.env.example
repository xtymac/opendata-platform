# OpenData Platform Environment Variables
# Copy this file to .env and fill in the values

# OpenAI API Key (for assistant service)
OPENAI_API_KEY=sk-your-openai-api-key

# Redis URL
REDIS_URL=redis://redis:6379/2

# CKAN Security Keys (generate with: openssl rand -base64 32)
CKAN_APP_SECRET_KEY=
CKAN_BEAKER_SESSION_SECRET=
CKAN__SECRET_KEY=
CKAN__WTF__CSRF__SECRET_KEY=

# CKAN JWT Secret (prefix with "string:")
CKAN__API_TOKEN__JWT__SECRET=string:your-jwt-secret-here

# CKAN Datapusher API Token
CKAN__DATAPUSHER__API_TOKEN=

# MLIT API Key
CKAN__MLIT__API_KEY=

# SSH Assistant (optional - for remote server access)
SSH_ASSISTANT_HOST=
SSH_ASSISTANT_USERNAME=ubuntu
SSH_ASSISTANT_KEY_PATH=/secrets/your-key.pem
SSH_ASSISTANT_ALLOWED_ROOTS=/
SSH_ASSISTANT_KNOWN_HOSTS=/secrets/known_hosts
